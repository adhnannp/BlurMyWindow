{
  "manifest_version": 3,
  "name": "Blur My Window",
  "version": "1.0",
  "description": "A simple extension to blur the webpage content and demonstrate a custom navigation effect.",
  "permissions": ["activeTab", "storage", "commands", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "commands": {
    "toggle-blur": {
      "suggested_key": {
        "default": "Shift+Ctrl+Space"
      },
      "description": "Toggle blur effect"
    },
    "toggle-navigate": {
      "suggested_key": {
        "default": "Shift+Ctrl+Q"
      },
      "description": "Trigger custom navigation with loading screen"
    }
  }
}
